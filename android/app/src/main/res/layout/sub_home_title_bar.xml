<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">



    <RelativeLayout
        android:background="@color/nav_background"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">


            <ImageView

                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sub_home_title_bar_logo"
                android:contentDescription="@null" />

            <TextView
                android:textSize="17.0dip"
                android:textColor="#ff333333"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"

                android:paddingLeft="10.0dip"
                android:paddingRight="0.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/search_btn"
                android:src="@drawable/sub_home_title_bar_search_selector"
                android:layout_marginRight="30.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/fav_btn"
                android:src="@drawable/sub_home_title_bar_favorite_selector"
                android:layout_marginRight="30.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/cache_btn"
                android:src="@drawable/sub_home_title_bar_down_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            </LinearLayout>




    </RelativeLayout>


</LinearLayout>