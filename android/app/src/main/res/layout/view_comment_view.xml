<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_brief_comment_layout_margin"
        android:layout_marginRight="@dimen/detail_brief_comment_layout_margin"
        android:layout_marginTop="8.0dip">

        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="@dimen/detail_comment_img_size"
            android:layout_height="@dimen/detail_comment_img_size"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="@dimen/detail_comment_img_size"
                android:layout_height="@dimen/detail_comment_img_size"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@+id/user_layout"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comment_name"
                    style="@style/FontB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:textColor="#ff828282" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="6.0dip"
                android:id="@+id/comment_content"
                style="@style/zhanglubao_detail_comment_text"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="12.0dip" />


</LinearLayout>